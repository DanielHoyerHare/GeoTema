<Window x:Class="GeoTema.Views.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GeoTema.Views"
        mc:Ignorable="d"
        Title="Login" 
        Height="240" 
        Width="240" 
        Background="#FF383838" 
        ResizeMode="CanMinimize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="75*"/>
            <RowDefinition Height="75*"/>
            <RowDefinition Height="25*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Label Content="Brugernavn"/>
            <TextBox Name="LoginBrugernavn" Text="admin" Style="{StaticResource Input}"/>
        </Grid>
        <Grid Grid.Row="1">
            <Label Content="Password"/>
            <TextBox Name="LoginKode" Text="Passw0rd" Style="{StaticResource Input}"/>
        </Grid>
        <Grid Grid.Row="2">
            <Button Content="Exit" HorizontalAlignment="Left" Click="Exit_Click" Style="{StaticResource rød}"/>
            <Button Content="Login" HorizontalAlignment="Right" Click="Login_Click" Style="{StaticResource grøn}"/>
        </Grid>
    </Grid>
</Window>
